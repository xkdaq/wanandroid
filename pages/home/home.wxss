/* pages/home/home.wxss */
.swiper{
  width: 100%;
  height: 400rpx;
}

.slide-image{
  width: 100%;
  height: 100%;
} 

.header{
  border-left-width: 4rpx;
  border-left-style: solid;
  border-left-color: #00abff;

  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
  margin: 4rpx 0 4rpx 0;
  background-color: #ffffff;
}

.header .text-commint{
  margin-left: 10rpx; 
}

.header .text-all{
  color: #00abff;
  font-size: 14px;
  margin-right: 10rpx;
}

.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.content .content-item{
  height: 250rpx;
  width:46%;
  background-color: #eeeeee;
  margin: 5px;
  border-radius:2%;

  position: relative;
}

.content .content-item image{
  width: 100%;
  height: 100%;
  border-radius:2%
}

.content .content-item .content-item-text{
  position: absolute;
  bottom: 0rpx;
  color: #cccccc;
  font-size: 11px;
  background: -webkit-linear-gradient(bottom,rgba(0, 0, 0, 0.7),rgba(0, 0, 0, 0));
  height: 125rpx;
  width: 94%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-left: 3%;
  padding-right: 3%;
  padding-bottom: 2%;

  border-radius:3%
  
}

.list-item{
  padding: 10rpx 20rpx;
}

.list-item-images{
  height: 360rpx;

  position: relative;
}

.list-item-images .list-item-image{
  width: 100%;
  height: 100%;

  border-radius:2%;
}

.list-item-images .list-item-avatar{
  height: 86rpx;
  width: 86rpx;
  border-radius: 50%;

  position: absolute;
  bottom: -43rpx;
  right: 43rpx;

}
.list-item-text{
  width: 100%;
}

.list-item-text{
  padding: 20rpx 0;
}

.list-item-text-title{
  width: 100%;
}

.list-item-text-contain{
  width: 100%;
  font-size: 12px;
  margin-top: 18rpx
}

.list-item-text-contain text{
  color: #8a8a8a;
}

