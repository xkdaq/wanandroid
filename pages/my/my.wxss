/* pages/my/my.wxss */

.contain{
  width: 100%;
  background-color: #eeeeee;
  padding-bottom: 1rpx;
}


.userinfo {
	display: flex;
	flex-direction: column;
	padding: 50rpx 0;
	align-items: center;
	background: #00abff;
  width: 100%;
  margin-bottom: 15rpx;
}

.userinfo-avatar{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

.userinfo-nickname{
  margin-top: 20rpx;
  color: white;
}

.item_my{
  width: 100%;
  height: 120rpx;
  background-color: white;
  margin-bottom: 5rpx;

  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.item_my .icon{
  width: 24px;
  height: 24px;
  margin-left: 10rpx;

}

.item_my text{
  font-size: 17px;
  color: #8a8a8a;
  margin-left: 26rpx;
}

.item_my .next{
  width: 24px;
  height: 24px;
  
  position: absolute;
  right:20rpx;
}


